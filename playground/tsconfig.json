{
  "include": ["."],
  "exclude": ["**/dist/**"],
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "types": ["vite/client", "vitest/globals", "node"],
    "paths": {
      "~utils": ["./test-utils.ts"],
      "vite": ["../packages/vite/src/index.ts"],
      "@vitejs/plugin-react": ["../packages/plugin-react/src/index.ts"],
      "@vitejs/plugin-vue": ["../packages/plugin-vue/src/index.ts"]
    }
  }
}

{
  "extends": ["config:base", "schedule:weekly", "group:allNonMajor"],
  "labels": ["dependencies"],
  "ignorePaths": [
    "packages/playground/**",
    "packages/create-vite/template-*/**",
    "**/__tests__/**"
  ],
  "pin": false,
  "rangeStrategy": "bump",
  "node": false,
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    }
  ],
  "ignoreDeps": [
    // manually bumping
    "esbuild",
    "rollup",
    "node",
    "ts-node",
    "typescript",

    // breaking changes
    "cac", // `cac:v6.7.10+` has breaking changes
    "source-map",
    "react-refresh",

    // breaks since "3.0.1", needs further investigate
    "postcss-load-config",

    // ESM Only
    "strip-ansi",
    "periscopic"
  ]
}
